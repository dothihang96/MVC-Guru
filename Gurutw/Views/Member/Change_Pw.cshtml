@model Gurutw.Models.ChangePassword
@{
    ViewBag.Title = "Change_Pw";
}

@section topCSS{
    <link href="~/Assets/Styles/changepassword.css" rel="stylesheet" />
}
<div class="change-pw">
    @Html.AntiForgeryToken()
    <form action="/Member/Change_Pw" class="frame-container-change-pw" method="POST">
        <h2>CHANGE PASSWORD</h2>
        <h5>ENTER YOUR CURRENT PASSWORD, AND YOUR NEW PASSWORD</h5>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*<input type="password" name="currentpass" placeholder="CURRENT PASSWORD">*@
        @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { type = "password", placeholder = "CURRENT PASSWORD" } })
        @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
        <p>*At least 8-16 characters for length.</p>
        @*<input type="password" name="password" placeholder="NEW PASSWORD">*@
        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { type = "password", placeholder = "NEW PASSWORD" } })
        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
        @*<input type="password" name="confirmpassword" placeholder="CONFIRM NEW PASSWORD">*@
        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { type = "password", placeholder = "CONFIRM NEW PASSWORD" } })
        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        <input type="submit" name="submit" id="submit" value="SUBMIT">
    </form>
</div>
